<p>Don't have an account? <%= link_to "Create one now", new_user_path %>.</p>

<%= semantic_form_left_column_size(5) %>

<% semantic_form_for(:session, :url => session_path) do |f| -%>
  <%= f.text_field 'email' %>
  <%= f.password_field 'password', :help => link_to("Reset", new_password_reset_path) %>
  <%= f.submit "Log In" %>
<% end -%>